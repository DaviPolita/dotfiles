{
    // NeoVim stuff
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\Users\\davipolita\\scoop\\shims\\nvim.exe",
    "vscode-neovim.neovimInitVimPaths.win32": "C:\\Users\\davipolita\\.config\\nvim\\init.lua",
    "editor.bracketPairColorization.enabled": true,
    "editor.formatOnSave": true,
    "editor.colorDecorators": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.highlightActiveIndentation": true,
    "editor.linkedEditing": true,
    "editor.stickyScroll.enabled": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "workbench.colorCustomizations": {
        "[One Dark Pro]": {
            "editor.background": "#1e2127",
            "terminal.foreground": "#abb2bf",
            "terminal.ansiBlack": "#1e2127",
            "terminal.ansiBlue": "#61afef",
            "terminal.ansiCyan": "#56b6c2",
            "terminal.ansiGreen": "#98C379",
            "terminal.ansiMagenta": "#c678dd",
            "terminal.ansiRed": "#e06c75",
            "terminal.ansiWhite": "#abb2bf",
            "terminal.ansiYellow": "#d19a66",
            "terminal.ansiBrightBlack": "#5c6370",
            "terminal.ansiBrightBlue": "#61afef",
            "terminal.ansiBrightCyan": "#56b6c2",
            "terminal.ansiBrightGreen": "#98c379",
            "terminal.ansiBrightMagenta": "#c678dd",
            "terminal.ansiBrightRed": "#e06c75",
            "terminal.ansiBrightWhite": "#ffffff",
            "terminal.ansiBrightYellow": "#d19a66"
        }
    },
    "emmet.showAbbreviationSuggestions": true,
    "emmet.showExpandedAbbreviation": "always",
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescriptreact",
        "postcss": "css"
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "html.autoClosingTags": true,
    "javascript.autoClosingTags": true,
    "javascript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "typescript.autoClosingTags": true,
    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "whichkey.delay": 0,
    "whichkey.sortOrder": "alphabetically",
    "workbench.iconTheme": "material-icon-theme",
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.inlineSuggest.enabled": true,
    "workbench.colorTheme": "One Dark Pro",
}
